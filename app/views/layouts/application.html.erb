<!doctype html>
<html lang="en">
<head>
  <meta charset="utf-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">    <title>Winchestertrimshop</title>
    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>
    <link rel="stylesheet" href="https://maxcdn.bootstrapcdn.com/bootstrap/3.4.1/css/bootstrap.min.css">
    <%= stylesheet_link_tag 'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= javascript_pack_tag 'application', 'data-turbolinks-track': 'reload' %>
  </head>
  <body>
    <div class="header">
      <%= image_tag "logo1.jpg", class: "imgcontent" %>
      
      <% if logged_in? %>
        <%= link_to "Edit User", edit_user_path(current_user), method: :get, class: "edituser" %>
        <%= link_to "Log Out", logout_path, method: :delete, class: "logout" %>
      <% else %>
        <%= link_to "Log In", login_path, method: :get, class: "login" %>
        <%= link_to "New User", new_user_path, method: :get, class: "newuser" %>
      <% end %>

    </div>
  
    <%= yield %>

    


  </body>
</html>
