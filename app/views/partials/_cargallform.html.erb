<h1><%= title %></h1>

<%= form_with model: cargallery, url: url, local: true  do |form| %>
  <%= render "partials/cargallerrorform" %>
  <br>
  <%= form.hidden_field :car_id, value: @car.id %>
  <br>  
  <%= form.label :car_image %>
  <%= form.file_field :car_image %>
  <br> 
  <%= form.label :description %>
  <%= form.text_field :description %>
  <br>
  
  
  <br>
  <br>

  <%= form.submit %>

<% end %>
