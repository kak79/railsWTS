<h1><%= 'Edit Password' %></h1>

<%= form_with model: @user, local: true do |form| %>
    <% if @user.errors.any? %>
      <div id="error_explanation">
        <h2>There were some errors:</h2>
        <ul>
          <% @user.errors.full_messages.each do |message| %>
            <li><%= message %></li>
          <% end %>
        </ul>
      </div>
    <% end %>
  <br>
  <%= form.label :password %>
  <%= form.password_field :password %>
  <br>
  <br>

  <%= form.submit %>
<br>
<% end %>